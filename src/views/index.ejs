<!doctype html>
<html lang="en">
	<head>
		<%- include('./partials/head'); %>
		<link rel="stylesheet" href="/css/app.css">
	</head>
	<body>
		<section class="launcherapp">
			<nav class="nav">
				<ul>
					<li class="user"><%= user.username %></li>
					<li>
						<form action="/api/v1/logout" method="post">
							<button class="logout" type="submit">Sign out</button>
							<input type="hidden" name="_csrf" value="<%= csrfToken %>">
						</form>
					</li>
				</ul>
			</nav>
			<header class="header">
				<h1>Lab Launcher</h1>
				
			</header>
			
			<section class="main">
        <form action="/run-docker" method="post">
          <input type="hidden" name="containerName" value="openvpn">
          <input type="hidden" name="imageName" value="openvpn">
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit">Launch OpenVPN</button>
        </form>
        
		
		  </section>
		<%- include('./partials/footer'); %>
		
	</body>
</html>
