<% const { value, label, icon, change, color } = data; %>
<div class="stat-card">
  <div class="card-header">
    <div>
      <div class="card-value"><%= value %></div>
      <div class="card-label"><%= label %></div>
    </div>
    <div class="card-icon <%= color %>">
      <i class="fas <%= icon %>"></i>
    </div>
  </div>
  <% if (change) { %>
    <div class="card-change <%= change.type === 'up' ? 'positive' : 'negative' %>">
      <i class="fas fa-arrow-<%= change.type === 'up' ? 'up' : 'down' %>"></i>
      <span><%= change.percent %>% from last month</span>
    </div>
  <% } %>
</div>