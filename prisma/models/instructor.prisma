model Instructor {
  userId       String      @id
  isOnline     Boolean     @default(false)
  lastActiveAt DateTime?
  expertise    String[]
  classrooms   Classroom[] @relation("ClassroomInstructor")
  user         User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([isOnline])
  @@index([lastActiveAt])
}
