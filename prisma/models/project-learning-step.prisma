model ProjectLearningStep {
  id            String          @id @default(uuid())
  projectId     String
  title         String
  description   String?
  type          ProjectStepType // ENUM: READING, LAB, QUIZ, PROJECT
  estimatedTime Int? // in minutes
  order         Int // sequence number
  prerequisites String[] // could store other step IDs as prerequisites

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project       Project               @relation("ProjectLearningSteps", fields: [projectId], references: [id])
  contents      ProjectContent[]
  quizQuestions ProjectQuizQuestion[]
}
