model Project {
  id                 String           @id @default(uuid())
  projectName        String           @unique
  projectDescription String?
  imageUrl           String?
  createdAt          DateTime         @default(now())
  updatedAt          DateTime         @updatedAt
  visible            Boolean?         @default(true)
  duration           DateTime?
  tags               ProjectTagsEnum?

  // relations
  progresses  Progress[]            @relation("ProjectProgresses")
  classrooms  Classroom[]           @relation("ClassroomProjects")
  submissions Submission[]          @relation("ProjectSubmissions")
  steps       ProjectLearningStep[] @relation("ProjectLearningSteps")
  discussions ProjectDiscussion[]
}
