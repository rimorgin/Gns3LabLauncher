model ProjectContent {
  id        String             @id @default(uuid())
  projectId String
  stepId    String
  type      ProjectContentType // ENUM: READING, VIDEO, etc.
  title     String
  content      String? // Markdown or rich text
  url       String? // for external resources (e.g., video/pdf)
  order     Int // optional: ordering of content pieces in a step

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  step ProjectLearningStep @relation(fields: [stepId], references: [id])
}
